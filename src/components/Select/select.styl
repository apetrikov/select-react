input-height = 15px;
input-padding = 15px;
input-width = 200px;
input-border = 1px;

defHight = input-height + 2 * (input-padding + input-border);
defWidth = input-width + 2 * input-padding;
defBorder = input-border solid gray;
defRadius = 5px;

@media (min-width: 300px) {

  .select-container{
    width: select-width;
    height: select-height;
  }

  .custom-select__floating-label {
    position: absolute;
    color: gray;

    pointer-events: none;
    left: 20px;
    top: 16px;

    transition: 0.2s ease all;
  }

  .custom-select__floating-label_up {
    display none
  }

  .custom-select__floating-label_down {
    top: -6px;
    bottom: 5px;
    left: 15px;
    font-size: 11px;
    opacity: 1;
    color: black;
    height: 16px;
    padding-left: 5px;
    padding-right: 5px;
    background: white;
  }

  .custom-select__input {
    height: input-height;
    padding: input-padding;
    width: input-width;
    border: defBorder;
    border-radius defRadius;
    color: orange;
    caret-color: black;

    &:focus{
      outline: none;
    }
  }

  .custom-select__input_down{
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-top-left-radius: defRadius;
    border-top-right-radius: defRadius;
  }

  .custom-select__input_up{
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-bottom-left-radius: defRadius;
    border-bottom-right-radius: defRadius;
  }

  .custom-select {
    position: relative;
    width: defWidth;
  }

  // Стили выпадающего меню
  .sub-menu{
    position: absolute;
    // Скрывает список сперва
    display: none;
    //display:block;
    background: #ffffff;
    color:#fff;
    border: defBorder;

    margin:0; //reset
    padding:0;

    cursor: pointer;

    // скругление углов
    &.sub-menu_up{
      display: block;
      bottom: 46px;
      border-top-left-radius: defRadius;
      border-top-right-radius: defRadius;
      //border-bottom  1px
    }

    &.sub-menu_down{
      display: block;
      border-bottom-left-radius: defRadius;
      border-bottom-right-radius: defRadius;
      border-top 0px
    }

    .sub-menu__item{
      display:block;
      width: defWidth;
      list-style-type:none;

      a{
        display:flex;
        text-align:center;
        text-decoration:none;
        color:#777;
        padding: input-padding;

        &:hover {
          background: #777;
          color: #fff;
        }

        .highlight {
          color: orange;
          text-decoration underline
        }
      }
    }

  }

  .custom-select__icon{
    position absolute
    top 14px
    right 10px
  }

}

.select-mobile {
  width: 232px;
  height: 46px;
  padding: 10px 35px 10px 15px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 5px;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  color: black;
  background: url(./arrow_down.png) 96% / 15% no-repeat white;
}
