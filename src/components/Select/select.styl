my-height = 50px;
my-width = 200px;
my-border = 1px;

@media (min-width: 800px) {

  .floating-label {
    position: absolute;
    pointer-events: none;
    left: 20px;
    top: 16px;
    color: gray;
    transition: 0.2s ease all;
  }

  .input {
    //height: 40px;
    border: solid 1px gray;
    border-radius: 10px;
    color: orange;
    caret-color: black;
    padding: 1rem;
    width: my-width;

    &:focus{
      outline: none;
    }

    &:focus ~ .floating-label,
    &:valid ~ .floating-label{
      top: -6px;
      bottom: 5px;
      left: 20px;
      font-size: 11px;
      opacity: 1;
      color: black;
      height: 16px;
      padding-left: 5px;
      padding-right: 5px;
      background: white;
    }
  }

  .select {
    width: my-width;

    // Отображает выпадающий список
    &:hover > .sub-menu {
      display:block;
      color:#fff;
      border: solid my-border black;

      // основной цвет фона списка
      padding-left:0;
      background: #ffffff;

      // Шрифт в списке
      a{
        color: #000000;
      }
    }
  }

  // Стили выпадающего меню
  .sub-menu {
    // Скрывает список сперва
    display: none;
    //display:block;
    color:#fff;
    border: solid my-border black;
    position:absolute;

    margin:0; //reset
    padding:0;
    cursor: pointer;

    li{
      display:block;
      height: my-height;
      width: my-width + 2 * my-border;
      list-style-type:none;

      a{
        display:flex;
        text-align:center;
        text-decoration:none;
        color:#777;
        padding:1rem;

        &:hover {
          background: #777;
          color: #fff;
        }

        .highlight {
          color: orange;
        }
      }
    }
  }

}
